<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText_BillAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:ems="10"
        android:inputType="number"
        android:maxLength="6"
        android:padding="@dimen/padding_default"
        android:textStyle="bold"
        android:autofillHints=""
        />

    <TextView
        android:id="@+id/textView_BillAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:background="#bbdefb"
        android:hint="@string/textView_billAmountHint"
        android:labelFor="@+id/editText_BillAmount"
        android:padding="@dimen/padding_default"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="@string/bill_amount" />
    <TextView
        android:id="@+id/percent_display"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:text="@string/percent"
        android:textAlignment="center"
        android:paddingTop="10dp"
        />
    <SeekBar
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:id="@+id/seekbar_display"
        />
    <TextView
        android:id="@+id/tip_text"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="@string/tip"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/tip_display"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:background="#FFE0B3"
        android:layout_marginBottom="2.5dp"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:text="@string/zero_dollars"
        />

    <TextView
        android:id="@+id/total_text"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_column="0"
        android:layout_row="3"
        android:textAlignment="center"
        android:text="@string/total"
        />
    <TextView
        android:id="@+id/total_display"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:background="#FFFFE0B3"
        android:layout_marginTop="2.5dp"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:text="@string/zero_dollars"

        />


</GridLayout>


